{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "../dist",
    "rootDir": "../src",
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["../src"]
}
